<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.vaskjala.vesiroosi20.pillipaevik">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application
            android:name=".PilliPaevik"
            android:allowBackup="true"
            android:icon="@drawable/ic_pillipaevik_app"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Pillipaevik">
        <activity
                android:name=".TeosListActivity"
                android:label="@string/app_name"
                android:launchMode="singleTop"
                android:theme="@style/Pillipaevik">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".TeosActivity"
                android:label="@string/title_teos"
                android:launchMode="singleTop"
                android:parentActivityName=".TeosListActivity"
                android:theme="@style/Pillipaevik"
                android:windowSoftInputMode="stateHidden">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".TeosListActivity"/>
        </activity>
        <activity
                android:name=".HarjutusMuudaActivity"
                android:parentActivityName=".TeosActivity"
                android:theme="@style/Pillipaevik">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.vaskjala.vesiroosi20.pillipaevik.TeosActivity"/>
        </activity>
        <activity
                android:name=".HarjutusLisaTehtudActivity"
                android:parentActivityName=".TeosActivity"
                android:theme="@style/Pillipaevik">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.vaskjala.vesiroosi20.pillipaevik.TeosActivity"/>
        </activity>        <activity
                android:name=".HarjutusUusActivity"
                android:parentActivityName=".TeosActivity"
                android:theme="@style/Pillipaevik">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.vaskjala.vesiroosi20.pillipaevik.TeosActivity"/>
        </activity>
        <activity
                android:name=".SeadedActivity"
                android:label="@string/title_activity_seaded"
                android:parentActivityName=".TeosListActivity"
                android:theme="@style/Pillipaevik"
                android:windowSoftInputMode="stateHidden">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.vaskjala.vesiroosi20.pillipaevik.TeosListActivity"/>
        </activity>
    </application>

</manifest>
