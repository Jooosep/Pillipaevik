<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 tools:context="com.vaskjala.vesiroosi20.pillipaevik.TeosActivity">

    <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/teos_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:navigationIcon="@drawable/ic_menu_black_18dp"
                    android:theme="@style/Pillipaevik"
                    app:popupTheme="@style/Pillipaevik"/>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/pillipaevik_peamine_taust"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior"
                  android:orientation="horizontal">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tabeli_rea_andmed"
                    android:layout_weight="1">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/pillipaevik_peamine_taust">
            <EditText
                android:id="@+id/nimi"
                android:hint="@string/nimi_vihje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tekstilahtri_aaris"
                android:layout_marginStart="@dimen/horisontaalne_aaris"
                android:layout_marginEnd="@dimen/horisontaalne_aaris"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:maxLength="48"
                android:inputType="textCapSentences|textMultiLine"/>
            <EditText
                android:id="@+id/autor"
                android:hint="@string/autor_vihje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horisontaalne_aaris"
                android:layout_marginEnd="@dimen/horisontaalne_aaris"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:maxLength="64"
                android:inputType="textCapSentences|textMultiLine"/>
            <EditText
                    android:id="@+id/kommentaar"
                    android:hint="@string/kommentaar_vihje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/horisontaalne_aaris"
                    android:layout_marginEnd="@dimen/horisontaalne_aaris"
                    android:layout_marginBottom="@dimen/vertikaalne_aaris"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:maxLength="96"
                    android:inputType="textCapSentences|textMultiLine"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="?attr/actionBarSize"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/horisontaalne_aaris"
                            android:paddingEnd="@dimen/horisontaalne_aaris"
                            android:background="@color/tabeli_rea_andmed">
                <LinearLayout android:id="@+id/harjutustearvkast"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/tekstilahtri_aaris"
                              android:layout_alignParentStart="true"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_replay_white_18dp"/>
                    <TextView android:id="@+id/teoseharjutustearv"
                              android:layout_width="@dimen/korduste_arvu_laius"
                              android:layout_height="wrap_content"
                              android:gravity="center_horizontal"
                              android:layout_gravity="center_vertical"
                              android:layout_marginEnd="@dimen/tekstilahtri_aaris"
                              android:textColor="@android:color/white"
                              android:text="0"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/harjutustekestuskast"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/tekstilahtri_aaris"
                              android:layout_below="@+id/harjutustearvkast"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="@dimen/tekstilahtri_aaris"
                               android:src="@drawable/ic_query_builder_white_18dp"/>
                    <TextView android:id="@+id/teoseharjutustekestus"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:gravity="center_vertical"
                              android:textColor="@android:color/white"
                              android:text="00:00"/>
                    </LinearLayout>
                <RatingBar
                        android:id="@+id/hinnaguriba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tekstilahtri_aaris"
                        android:layout_marginBottom="@dimen/tekstilahtri_aaris"
                        android:layout_alignStart="@id/harjutustekestuskast"
                        android:layout_below="@id/harjutustekestuskast"
                        android:layout_gravity="center_vertical"
                        android:progressTint="@color/colorAccent"
                        style="?android:attr/ratingBarStyleSmall"
                        android:indeterminate="false"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="3"
                        android:onClick="MuudaHinnangut"/>
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eraldusjoone_paksus"
                    android:background="@android:color/white"/>
        </LinearLayout>
        </ScrollView>
        <View
                android:layout_width="@dimen/eraldusjoone_paksus"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>
        <ListView android:id="@+id/harjutuslist"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@color/pillipaevik_peamine_taust"
                  android:choiceMode="singleChoice"
                  android:dividerHeight="@dimen/eraldusjoone_paksus"
                  android:divider="@android:color/white"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
