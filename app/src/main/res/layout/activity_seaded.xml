<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="false"
                                                 tools:context="com.vaskjala.vesiroosi20.pillipaevik.SeadedActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
                android:id="@+id/seaded_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/Pillipaevik"
                app:popupTheme="@style/Pillipaevik"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minueesnimi"
            android:hint="@string/minu_eesnimi_vihje"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:inputType="textCapSentences"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/minuperenimi"
                android:hint="@string/minu_perenimi_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/minuepost"
                android:hint="@string/minu_e_post_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textEmailAddress"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:layout_marginTop="@dimen/eraldusjoone_ylemine_aaris"
                android:layout_marginBottom="@dimen/eraldusjoone_alumine_aaris"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:background="@color/colorPrimaryDark" />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/muusikakool"
                android:hint="@string/muusikakooli_nimi_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/klass"
                android:hint="@string/klass_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/minuinstrument"
                android:hint="@string/pill_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:layout_marginTop="@dimen/eraldusjoone_ylemine_aaris"
                android:layout_marginBottom="@dimen/eraldusjoone_alumine_aaris"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:background="@color/colorPrimaryDark" />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opetajaeesnimi"
                android:hint="@string/opetaja_eesnimi_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opetajaperenimi"
                android:hint="@string/opetaja_perenimi_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opetajaepost"
                android:hint="@string/opetaja_e_post_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textEmailAddress"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:layout_marginTop="@dimen/eraldusjoone_ylemine_aaris"
                android:layout_marginBottom="@dimen/eraldusjoone_alumine_aaris"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:background="@color/colorPrimaryDark" />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paevasharjutada"
                android:hint="@string/harjutamise_norm_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="number"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:layout_marginTop="@dimen/eraldusjoone_ylemine_aaris"
                android:layout_marginBottom="@dimen/eraldusjoone_alumine_aaris"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:background="@color/colorPrimaryDark" />
        <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:id="@+id/kasLubadaMikrofonigaSalvestamine"
                android:textOff="@string/ei"
                android:textOn="@string/jah"
                android:text="@string/kasLubadaMikrofonigaSalvestamine"
        android:onClick="KasSalvestameMikrofoniga"/>
        <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:id="@+id/kasKasutadaGoogleDrive"
                android:text="@string/kasKasutadaGoogleDrive"
                android:textOff="@string/ei"
                android:textOn="@string/jah"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/googlekonto"
                android:hint="@string/google_konto_vihje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textEmailAddress"
                android:enabled="false"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:layout_marginTop="@dimen/eraldusjoone_ylemine_aaris"
                android:layout_marginBottom="@dimen/eraldusjoone_alumine_aaris"
                android:layout_marginLeft="@dimen/tekstilahtri_aaris"
                android:layout_marginRight="@dimen/tekstilahtri_aaris"
                android:background="@color/colorPrimaryDark" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/googlelitsents"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>