<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pillipaevik_peamine_taust">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horisontaalne_aaris"
            android:layout_marginEnd="@dimen/horisontaalne_aaris"
            android:layout_marginTop="@dimen/vertikaalne_aaris"
            android:layout_marginBottom="@dimen/vertikaalne_aaris"
            android:id="@+id/harjutusekirjeldus"
            android:hint="@string/harjutuse_kirjeldus_vihje"
            android:maxLength="64"
            android:inputType="textCapSentences|textMultiLine"/>

        <LinearLayout android:id="@+id/nupud"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/horisontaalne_aaris"
                      android:layout_marginEnd="@dimen/horisontaalne_aaris"
                      android:layout_below="@id/harjutusekirjeldus"
                      android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/alusta"
                android:drawableStart="@drawable/ic_query_builder_black"
                android:id="@+id/kaivitataimernupp"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/mikrofoniluliti"
                    android:drawableStart="@drawable/ic_mic_off_black"/>
        </LinearLayout>
        <TextView android:id="@+id/juhend"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/horisontaalne_aaris"
                  android:layout_marginEnd="@dimen/horisontaalne_aaris"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="@dimen/horisontaalne_aaris"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="@string/uusharjutustjuhend"/>
        <TextView
                android:textColor="@color/taimeri_teksti_varv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horisontaalne_aaris"
                android:layout_marginEnd="@dimen/horisontaalne_aaris"
                android:layout_below="@id/nupud"
                android:layout_alignTop="@id/nupud"
                android:layout_alignBottom="@id/juhend"
                android:gravity="center"
                android:textSize="@dimen/stopperi_font"
                android:text="@string/stopper"
                android:id="@+id/timer"/>
    </RelativeLayout>