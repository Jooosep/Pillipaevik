<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/activatedBackgroundIndicator">
    <TextView android:id="@+id/harjutuslist_harjutusekirjeldus"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:minHeight="@dimen/tabeli_rea_korgus"
              android:layout_alignParentStart="true"
              android:layout_toStartOf="@+id/harjutuslisti_pilt"
              android:layout_marginStart="@dimen/tekstilahtri_aaris"
              android:gravity="start|center_vertical"
              android:singleLine="true"
              android:textColor="@android:color/black"
              android:textAppearance="?android:attr/textAppearanceSmall"/>
    <ImageView android:id="@+id/harjutuslisti_pilt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toStartOf="@+id/harjutuslist_kuupaev"
               android:scaleType="centerCrop"
               android:scaleX="@dimen/pildikeste_vahendamine_50persent"
               android:scaleY="@dimen/pildikeste_vahendamine_50persent"
               android:src="@drawable/ic_library_music_black_18dp"/>
    <TextView android:id="@+id/harjutuslist_kestus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="@dimen/tekstilahtri_aaris"
              android:gravity="end|center_vertical"
              android:singleLine="true"
              android:textSize="@dimen/harjutus_listi_tekstide_font"
              android:textColor="@android:color/black"/>
    <TextView android:id="@+id/harjutuslist_kuupaev"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignBottom="@+id/harjutuslist_harjutusekirjeldus"
              android:layout_marginEnd="@dimen/tekstilahtri_aaris"
              android:gravity="end|center_vertical"
              android:singleLine="true"
              android:textSize="@dimen/harjutus_listi_tekstide_font"
              android:textColor="@android:color/black"/>
</RelativeLayout>

