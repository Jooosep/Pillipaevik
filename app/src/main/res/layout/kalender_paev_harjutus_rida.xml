<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="?attr/actionBarSize"
              android:background="@color/tabeli_rea_taust"
              android:orientation="vertical">
        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/harjutuste_kalendri_harjutuse_rea_aaris"
                        android:layout_marginEnd="@dimen/horisontaalne_aaris"
                        android:background="@color/tabeli_rea_taust">
            <TextView android:id="@+id/kalender_paev_harjutus_teosenimi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_toStartOf="@+id/kalender_paev_harjutus_helifaili_pilt"
                      android:singleLine="true"
                      android:textAppearance="?attr/textAppearanceListItem"
                      android:textColor="@android:color/black"/>
            <TextView android:id="@+id/kalender_paev_harjutus_harjutuse_kirjeldus"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_below="@+id/kalender_paev_harjutus_teosenimi"
                      android:singleLine="true"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:textColor="@android:color/black"/>
            <ImageView android:id="@+id/kalender_paev_harjutus_helifaili_pilt"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_toStartOf="@+id/kalender_paev_harjutus_harjutuse_kestus"
                       android:scaleType="centerCrop"
                       android:scaleX="@dimen/pildikeste_vahendamine_uldine"
                       android:scaleY="@dimen/pildikeste_vahendamine_uldine"
                       android:src="@drawable/ic_library_music_black_18dp"/>
            <TextView android:id="@+id/kalender_paev_harjutus_harjutuse_kestus"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_alignParentEnd="true"
                      android:gravity="end|center_vertical"
                      android:singleLine="true"
                      android:textColor="@android:color/black"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:background="@android:color/white"/>
</LinearLayout>


