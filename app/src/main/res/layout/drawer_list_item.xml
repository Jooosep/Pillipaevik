<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/activatedBackgroundIndicator"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/drawerimageid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:scaleX="@dimen/pildikeste_vahendamine_50persent"
            android:scaleY="@dimen/pildikeste_vahendamine_50persent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_menu_black_18dp"
            />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/drawertextid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/horisontaalne_aaris"
              android:layout_marginEnd="@dimen/horisontaalne_aaris"
              android:gravity="center_vertical"
              android:textSize="@dimen/sahtli_tekstide_font"
              android:minHeight="?android:attr/listPreferredItemHeightSmall"/>
</LinearLayout>
