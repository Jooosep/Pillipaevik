<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 tools:context="com.vaskjala.vesiroosi20.pillipaevik.TeosActivity">

    <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/teos_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:navigationIcon="@drawable/ic_menu_black_18dp"
                    android:theme="@style/Pillipaevik"
                    app:popupTheme="@style/Pillipaevik"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/horisontaalne_aaris"
        android:layout_marginRight="@dimen/horisontaalne_aaris"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <EditText
            android:id="@+id/nimi"
            android:hint="@string/nimi_vihje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:inputType="textCapSentences"/>
        <EditText
            android:id="@+id/autor"
            android:hint="@string/autor_vihje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:inputType="textCapSentences"/>
        <EditText
                android:id="@+id/kommentaar"
                android:hint="@string/kommentaar_vihje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="textCapSentences"/>
        <View   android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:background="@color/colorPrimaryDark" />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="1">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:scaleType="centerCrop"
                           android:scaleX="@dimen/pildikeste_vahendamine_50persent"
                           android:scaleY="@dimen/pildikeste_vahendamine_50persent"
                           android:src="@drawable/ic_replay_black_18dp"/>
                <TextView android:id="@+id/teoseharjutustearv"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center_vertical|start"
                          android:text="0"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_weight="2">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:scaleType="centerCrop"
                           android:scaleX="@dimen/pildikeste_vahendamine_50persent"
                           android:scaleY="@dimen/pildikeste_vahendamine_50persent"
                           android:src="@drawable/ic_query_builder_black_18dp"/>
                <TextView android:id="@+id/teoseharjutustekestus"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_marginStart="@dimen/tekstilahtri_aaris"
                          android:gravity="center_vertical|start"
                          android:text="00:00"/>
                </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                        android:layout_weight="4">
                <RatingBar
                        android:id="@+id/hinnaguriba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:progressTint="@color/colorAccent"
                        style="?android:attr/ratingBarStyleSmall"
                        android:indeterminate="false"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="3"
                        android:onClick="MuudaHinnangut"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/eraldusjoone_paksus"
                android:background="@color/colorPrimaryDark" />
        <ListView android:id="@+id/harjutuslist"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:choiceMode="singleChoice"
                  android:dividerHeight="@dimen/eraldusjoone_paksus"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
